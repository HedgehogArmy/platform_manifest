<?xml version="1.0" encoding="UTF-8"?>
<manifest>

    <remote name="github"
        fetch="https://github.com/" />

    <remote name="hga"
        fetch="https://github.com/hedgehogarmy"
        revision="refs/heads/pie" />

    <remote name="nos"
        fetch="https://github.com/nitrogen-project"
        revision="refs/heads/p" />
    
    <remote name="laos"
       fetch="https://github.com/lineageos"
       revision="refs/heads/lineage-16.0" />

    <remote name="carbon"
       fetch="https://github.com/CarbonBeta"
       revision="refs/heads/cr-7.0" />
    
    <remote name="hga-caf-8996"
       fetch="https://github.com/hedgehogarmy"
       revision="refs/heads/cr-7.0-caf-8996" />

    <!-- general -->
    <project path="build/make" name="build" remote="hga" >
        <copyfile src="core/root.mk" dest="Makefile" />
        <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
        <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
        <linkfile src="core" dest="build/core" />
        <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
        <linkfile src="target" dest="build/target" />
        <linkfile src="tools" dest="build/tools" />
    </project>

    <project path="build/soong" name="build_soong" remote="hga" >
        <linkfile src="root.bp" dest="Android.bp" />
        <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
    </project>

    <project path="art" name="art" remote="hga" />

    <project path="bionic" name="bionic" remote="hga" />

    <project path="bootable/recovery" name="android_bootable_recovery" remote="nos" />

    <!-- external -->
    <project path="external/perfetto" name="external_perfetto" groups="pdk" remote="hga" />
    <project path="external/tinycompress" name="android_external_tinycompress" remote="carbon" />

    <!-- system -->
    <project path="system/core" name="system_core" remote="hga" />

    <!-- frameworks -->
    <project path="frameworks/av" name="frameworks_av" remote="hga" />
    <project path="frameworks/compile/mclinker" name="android_frameworks_compile_mclinker" remote="nos" />

    <!-- hardware -->
    <project path="hardware/libhardware" name="android_hardware_libhardware" remote="carbon" />
    <project path="hardware/qcom/audio" name="android_hardware_qcom_audio" remote="carbon" />
    <project path="hardware/qcom/audio-caf-msm8996" name="android_hardware_qcom_audio" remote="hga-caf-8996" />
    <project path="hardware/qcom/display" name="android_hardware_qcom_display" remote="carbon" />
    <project path="hardware/qcom/display-caf-msm8996" name="android_hardware_qcom_display" remote="hga-caf-8996" />
    <project path="hardware/qcom/media" name="android_hardware_qcom_media" remote="carbon" />
    <project path="hardware/qcom/media-caf-msm8996" name="android_hardware_qcom_media" remote="hga-caf-8996" />
    <project path="hardware/qcom/gps" name="android_hardware_qcom_gps" remote="carbon" />
    <project path="hardware/nxp/nfc/" name="android_hardware_nxp_nfc" remote="nos" />
    <project path="hardware/interfaces" name="android_hardware_interfaces" remote="carbon" />
    <project path="hardware/qcom/bt" name="android_hardware_qcom_bt" remote="carbon" />
    <project path="hardware/qcom/power" name="hardware_qcom_power" remote="hga" />

    <!-- prebuilts -->
    <project path="prebuilts/build-tools" name="android_prebuilts_build-tools" remote="carbon" />

    <!-- vendor -->
    <project path="vendor/extras" name="vendor_extras" remote="hga" />
    <project path="vendor/hedgehog" name="vendor_hedgehog" remote="hga" />
    <project path="vendor/qcom/opensource/dataservices" name="android_vendor_qcom_opensource_dataservices" remote="carbon" />
    <project path="vendor/qcom/opensource/interfaces" name="android_vendor_qcom_opensource_interfaces" remote="carbon" />
    <project path="vendor/qcom/opensource/dpm" name="android_vendor_qcom_opensource_dpm" remote="nos" />
    <project path="vendor/codeaurora/telephony" name="android_vendor_codeaurora_telephony" remote="carbon" />

</manifest>

